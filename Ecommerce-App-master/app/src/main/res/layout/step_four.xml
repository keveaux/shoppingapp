<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">
    <LinearLayout
            android:id="@+id/welcomeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/space40"
                android:paddingRight="@dimen/space40">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Started"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/space10"
                    android:layout_marginTop = "@dimen/space10"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space20"
                    android:text="The best of both worlds. Store and web.Whatever you’ve got in mind, we’ve got inside. "
                    android:lineSpacingExtra="5dp"
                    android:textStyle="normal"
                    android:textSize="21sp"
                    android:textColor="#A1FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/welcomeInfo"
            android:gravity="center"
            android:padding="@dimen/space20">
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_get_started"/>
    </LinearLayout>
</RelativeLayout>