<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/ll_wallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/iv_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:textColor="@color/textLabel"
                    android:text="Help us find what fits you"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What are your Measurements"
                    android:textSize="18sp"
                    android:textColor="@color/textHint"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="horizontal"
                >
                <!--shirt-->
            <LinearLayout
                android:id="@+id/ll_shirt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/space20"
                    android:textColor="@color/textLabel"
                    android:text="Shirt Size"
                    android:textSize="24sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                       app:srcCompat="@drawable/ic_shirt"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:id="@+id/input_neck"
                            android:layout_width="140dp"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/textHint">
                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_outline_info_24dp"
                                android:maxLines="1"
                                android:inputType="number"
                                android:textColor="@color/textLabel"
                                android:textColorHint="@color/textHint"
                                android:hint="Neck size"
                                android:id="@+id/et_neck" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="140dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/textHint">
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/et_arm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_outline_info_24dp"
                                android:maxLines="1"
                                android:inputType="number"
                                android:textColor="@color/textLabel"
                                android:textColorHint="@color/textHint"
                                android:hint="Arm length"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:textColor="@color/textLabel"
                    android:text="Select Size"
                    android:textSize="18sp" />
                <RadioGroup
                    android:id="@+id/rg_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_xs"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:button="@null"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/textLabelDark"
                        android:gravity="center"
                        android:background="@drawable/radio_states"
                        android:text="XS"/>
                    <RadioButton
                        android:id="@+id/rb_s"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:button="@null"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/textLabelDark"
                        android:gravity="center"
                        android:background="@drawable/radio_states"
                        android:text="S"/>
                    <RadioButton
                        android:id="@+id/rb_m"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:button="@null"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/textLabelDark"
                        android:gravity="center"
                        android:background="@drawable/radio_states"
                        android:text="M"/>
                    <RadioButton
                        android:id="@+id/rb_l"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:button="@null"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/textLabelDark"
                        android:gravity="center"
                        android:background="@drawable/radio_states"
                        android:text="L"/>
                    <RadioButton
                        android:id="@+id/rb_xl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:button="@null"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/textLabelDark"
                        android:gravity="center"
                        android:background="@drawable/radio_states"
                        android:text="XL"/>
                </RadioGroup>

            </LinearLayout>
                <!--pant-->
                <LinearLayout
                    android:id="@+id/ll_pant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="@dimen/space20"
                        android:textColor="@color/textLabel"
                        android:text="Pant Size"
                        android:textSize="24sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_jeans"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:id="@+id/input_waist"
                                    android:layout_width="140dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"
                                    android:textColorHint="@color/textHint">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_outline_info_24dp"
                                        android:maxLines="1"
                                        android:inputType="number"
                                        android:textColor="@color/textLabel"
                                        android:textColorHint="@color/textHint"
                                        android:hint="Waist Size"
                                        android:id="@+id/editText_waist" />
                                </com.google.android.material.textfield.TextInputLayout>
                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:layout_width="140dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:textColorHint="@color/textHint">
                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_outline_info_24dp"
                                        android:maxLines="1"
                                        android:inputType="number"
                                        android:textColor="@color/textLabel"
                                        android:textColorHint="@color/textHint"
                                        android:hint="Inseam"/>
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="20dp"
                        android:textColor="@color/textLabel"
                        android:text="Select Size"
                        android:textSize="18sp" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="XS"/>
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="S"/>
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="M"/>
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="L"/>
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="XL"/>
                    </RadioGroup>
                </LinearLayout>
                <!--shoe-->
                <LinearLayout
                    android:id="@+id/ll_shoe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/space20"
                        android:textColor="@color/textLabelDark"
                        android:text="Shoe Size"
                        android:textSize="21sp" />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:padding="30dp"
                                app:srcCompat="@drawable/ic_sneakers"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="20dp"
                        android:textColor="@color/textLabel"
                        android:text="Select Size"
                        android:textSize="18sp" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="XS"/>
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="S"/>
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="M"/>
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="L"/>
                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:textColor="@color/textLabelDark"
                            android:gravity="center"
                            android:background="@drawable/radio_states"
                            android:text="XL"/>
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
                    android:id="@+id/btn_next"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="55dp"
                    android:layout_margin="@dimen/space20"
                    android:layout_gravity="center_horizontal"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textSize="@dimen/txt16"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="25dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/space20"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


